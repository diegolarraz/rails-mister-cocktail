<h1><%= @cocktail.name %></h1>
<ul>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.ingredient.name %> <%= dose.description %> <%= link_to "x", dose_path(dose), method: :delete %></li>
<% end %>
</ul>
<%= simple_form_for([ @cocktail, @dose ]) do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Add Dose", class: "btn btn-primary" %>
<% end %>
<%= link_to "back to list" , cocktails_path %>
